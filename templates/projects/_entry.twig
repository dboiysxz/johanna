{% extends "index" %}

{% block content %}

    {# Project Images #}
    {% include "components/slider" with {
        images: entry.images.all()
    } %}

    <section id="about" class="project-overview">
        <div class="main">
            <h1 class="project-title">
                {{ entry.title }}
            </h1>
            <p>
                {{ entry.projectDescription }}
            </p>
        </div>

        {% set tags = entry.projectTags.all() %}

        {% for tag in tags %}
            <div class="spacer-1rem"></div>
        {% endfor %}
        <div class="spacer-1rem"></div>

        {% if tags %}
        <div class="tags-container">
            <div class="tags general-content">
                {% for tag in tags %}
                <div class="tag-row">
                    <div class="tag-title">
                        {{ tag.tag}}
                    </div>
                    <div class="tag-content">
                        {{ tag.tagDescription}}
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}

    </section>

{% endblock %}
